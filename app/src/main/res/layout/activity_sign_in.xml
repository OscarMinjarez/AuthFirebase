<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="24dp"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join Us!"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_margin="@dimen/input_margin"/>

    <EditText
        android:id="@+id/etMail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:inputType="textEmailAddress"
        android:hint="Email address"
        android:textSize="@dimen/input_text_size"
        android:paddingHorizontal="@dimen/horizontal_input_padding"
        android:paddingVertical="@dimen/vertical_input_padding"
        android:background="@drawable/input_style"
        android:layout_marginBottom="@dimen/input_margin"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:inputType="textPassword"
        android:hint="Password"
        android:textSize="@dimen/input_text_size"
        android:paddingHorizontal="@dimen/horizontal_input_padding"
        android:paddingVertical="@dimen/vertical_input_padding"
        android:background="@drawable/input_style"
        android:layout_marginBottom="@dimen/input_margin"/>

    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:inputType="textPassword"
        android:hint="Confirm password"
        android:textSize="@dimen/input_text_size"
        android:paddingHorizontal="@dimen/horizontal_input_padding"
        android:paddingVertical="@dimen/vertical_input_padding"
        android:background="@drawable/input_style"
        android:layout_marginBottom="@dimen/input_margin"/>

    <TextView
        android:id="@+id/tvError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#f00"
        android:visibility="invisible"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRegister"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Register"
        android:textColor="@color/colorSecondaryLight"
        android:background="@drawable/button_primary_style"/>

</LinearLayout>